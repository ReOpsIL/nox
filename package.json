{
  "name": "nox",
  "version": "1.0.0",
  "description": "Autonomous AI Agent Ecosystem",
  "main": "dist/nox.js",
  "bin": {
    "nox": "./dist/nox.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/nox.js start",
    "dev": "ts-node src/nox.ts start --dev",
    "init": "node dist/nox.js init",
    "add-agent": "node dist/nox.js add-agent",
    "list-agents": "node dist/nox.js list-agents",
    "update-agent": "node dist/nox.js update-agent",
    "delete-agent": "node dist/nox.js delete-agent",
    "dashboard": "node dist/server/app.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/dockerode": "^3.3.42",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dockerode": "^4.0.7",
    "express": "^4.18.2",
    "inquirer": "^8.2.6",
    "node-fetch": "^2.7.0",
    "ora": "^5.4.1",
    "simple-git": "^3.19.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "ai",
    "agents",
    "automation",
    "claude",
    "mcp",
    "ecosystem"
  ],
  "author": "Nox Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/nox.git"
  }
}
